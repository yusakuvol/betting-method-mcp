{
  "name": "betting-method-mcp",
  "version": "0.1.0",
  "description": "MCP server for calculating various betting methods (Monte Carlo, Martingale, etc.)",
  "author": "yusakuvol",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yusakuvol/betting-method-mcp.git"
  },
  "homepage": "https://github.com/yusakuvol/betting-method-mcp#readme",
  "bugs": {
    "url": "https://github.com/yusakuvol/betting-method-mcp/issues"
  },
  "type": "module",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "bin": {
    "betting-method-mcp": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "dev": "node --enable-source-maps build/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "betting",
    "monte-carlo",
    "martingale",
    "betting-strategy",
    "gambling",
    "money-management"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/ui": "^2.1.8",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18"
  },
  "volta": {
    "node": "22.12.0"
  }
}
