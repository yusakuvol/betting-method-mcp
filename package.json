{
  "name": "betting-method-mcp",
  "version": "0.1.0",
  "description": "MCP server for calculating various betting methods (Monte Carlo, Martingale, etc.)",
  "author": "yusakuvol",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yusakuvol/betting-method-mcp.git"
  },
  "homepage": "https://github.com/yusakuvol/betting-method-mcp#readme",
  "bugs": {
    "url": "https://github.com/yusakuvol/betting-method-mcp/issues"
  },
  "type": "module",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "bin": {
    "betting-method-mcp": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "husky",
    "watch": "tsc --watch",
    "dev": "node --enable-source-maps build/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write src",
    "format:check": "biome format src",
    "check": "biome check src"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "betting",
    "monte-carlo",
    "martingale",
    "betting-strategy",
    "gambling",
    "money-management"
  ],
  "ai-context": {
    "claude": "CLAUDE.md",
    "general": "AGENT.md",
    "copilot": ".github/copilot-instructions.md",
    "cursor": ".cursorrules"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/node": "^24.7.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "volta": {
    "node": "22.12.0"
  },
  "lint-staged": {
    "*.ts": [
      "biome lint --write",
      "biome format --write"
    ],
    "*.json": [
      "biome format --write"
    ]
  }
}
